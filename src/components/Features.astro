---
// Features section highlighting key benefits
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block text-primary font-semibold text-sm uppercase tracking-wider mb-3">Why Choose Us</span>
      <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">Superior Performance & Protection</h2>
      <p class="text-gray-600">Our advanced formulations are designed to deliver exceptional results in the most demanding conditions.</p>
    </div>
    
    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Feature 1 -->
      <div class="feature-card p-8 bg-gray-50 rounded-xl text-center transition-all duration-300 hover:shadow-lg">
        <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-dark mb-3">Enhanced Performance</h3>
        <p class="text-gray-600">Optimized for maximum power output and fuel efficiency in all operating conditions.</p>
      </div>
      
      <!-- Feature 2 -->
      <div class="feature-card p-8 bg-gray-50 rounded-xl text-center transition-all duration-300 hover:shadow-lg">
        <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-dark mb-3">Maximum Protection</h3>
        <p class="text-gray-600">Advanced additives prevent wear, corrosion, and deposit formation for extended engine life.</p>
      </div>
      
      <!-- Feature 3 -->
      <div class="feature-card p-8 bg-gray-50 rounded-xl text-center transition-all duration-300 hover:shadow-lg">
        <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-dark mb-3">Thermal Stability</h3>
        <p class="text-gray-600">Maintains viscosity and lubricating properties even under extreme temperature conditions.</p>
      </div>
      
      <!-- Feature 4 -->
      <div class="feature-card p-8 bg-gray-50 rounded-xl text-center transition-all duration-300 hover:shadow-lg">
        <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-dark mb-3">Eco-Friendly</h3>
        <p class="text-gray-600">Environmentally responsible formulations that reduce emissions and waste.</p>
      </div>
    </div>
    
    <!-- Stats -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div class="stat-item">
        <div class="text-4xl md:text-5xl font-bold text-primary mb-2">25+</div>
        <div class="text-gray-600">Years Experience</div>
      </div>
      <div class="stat-item">
        <div class="text-4xl md:text-5xl font-bold text-primary mb-2">50+</div>
        <div class="text-gray-600">Products</div>
      </div>
      <div class="stat-item">
        <div class="text-4xl md:text-5xl font-bold text-primary mb-2">1M+</div>
        <div class="text-gray-600">Happy Customers</div>
      </div>
      <div class="stat-item">
        <div class="text-4xl md:text-5xl font-bold text-primary mb-2">24/7</div>
        <div class="text-gray-600">Support</div>
      </div>
    </div>
  </div>
</section>

<!-- GSAP Animations -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof gsap !== 'undefined') {
      // Animate features on scroll
      gsap.utils.toArray('.feature-card').forEach((card, i) => {
        gsap.from(card, {
          scrollTrigger: {
            trigger: card,
            start: 'top 85%',
            toggleActions: 'play none none none'
          },
          y: 30,
          opacity: 0,
          duration: 0.6,
          delay: i * 0.1,
          ease: 'power2.out'
        });
      });
      
      // Animate stats counting
      gsap.utils.toArray('.stat-item').forEach((stat, i) => {
        const numberElement = stat.querySelector('div:first-child');
        const targetNumber = parseInt(numberElement.textContent);
        
        gsap.to(stat, {
          scrollTrigger: {
            trigger: stat,
            start: 'top 80%',
            toggleActions: 'play none none none',
            onEnter: () => {
              if (!stat.classList.contains('counted')) {
                stat.classList.add('counted');
                animateNumber(numberElement, targetNumber);
              }
            }
          }
        });
      });
      
      // Number counting function
      function animateNumber(element, target) {
        const duration = 2000; // 2 seconds
        const start = 0;
        const increment = target / (duration / 16); // 60fps
        let current = start;
        
        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            element.textContent = target + (element.textContent.includes('+') ? '+' : '');
            clearInterval(timer);
          } else {
            element.textContent = Math.floor(current) + (element.textContent.includes('+') ? '+' : '');
          }
        }, 16);
      }
    }
  });
</script>

<style>
  .feature-card {
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  
  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255,59,0,0.05) 0%, rgba(255,107,0,0.05) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }
  
  .feature-card:hover::before {
    opacity: 1;
  }
  
  .stat-item {
    padding: 2rem 1rem;
    background: #fff;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .stat-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  @media (max-width: 767px) {
    .feature-card {
      padding: 1.5rem;
    }
    
    .stat-item {
      padding: 1.5rem 0.5rem;
    }
  }
</style>
