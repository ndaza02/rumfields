---
// Product showcase section with animated product cards
---

<section id="products" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block text-primary font-semibold text-sm uppercase tracking-wider mb-3">Our Products</span>
      <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">Premium Lubrication Solutions</h2>
      <p class="text-gray-600">Engineered to meet the highest industry standards and deliver exceptional performance in the most demanding conditions.</p>
    </div>
    
    <!-- Product Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Product 1 -->
      <div class="product-card group">
        <div class="product-image bg-white p-6 rounded-t-xl flex items-center justify-center h-64">
          <img src="/images/engine-oil.png" alt="Synthetic Engine Oil" class="h-full w-auto object-contain transition-transform duration-500 group-hover:scale-110" />
        </div>
        <div class="bg-white p-6 rounded-b-xl shadow-lg">
          <div class="flex justify-between items-start mb-2">
            <h3 class="text-xl font-bold text-dark">Synthetic Engine Oil</h3>
            <span class="bg-primary/10 text-primary text-xs font-semibold px-2.5 py-0.5 rounded-full">Best Seller</span>
          </div>
          <p class="text-gray-600 mb-4">Advanced full synthetic formula for maximum engine protection and performance.</p>
          <div class="flex items-center justify-between">
            <span class="text-2xl font-bold text-dark">$34.99</span>
            <a href="/products/synthetic-engine-oil" class="text-primary font-medium hover:underline flex items-center">
              Learn More
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Product 2 -->
      <div class="product-card group">
        <div class="product-image bg-white p-6 rounded-t-xl flex items-center justify-center h-64">
          <img src="/images/gear-oil.png" alt="Heavy Duty Gear Oil" class="h-full w-auto object-contain transition-transform duration-500 group-hover:scale-110" />
        </div>
        <div class="bg-white p-6 rounded-b-xl shadow-lg">
          <h3 class="text-xl font-bold text-dark mb-2">Heavy Duty Gear Oil</h3>
          <p class="text-gray-600 mb-4">Specially formulated for heavy-duty applications and extreme pressure conditions.</p>
          <div class="flex items-center justify-between">
            <span class="text-2xl font-bold text-dark">$39.99</span>
            <a href="/products/heavy-duty-gear-oil" class="text-primary font-medium hover:underline flex items-center">
              Learn More
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Product 3 -->
      <div class="product-card group">
        <div class="product-image bg-white p-6 rounded-t-xl flex items-center justify-center h-64">
          <img src="/images/hydraulic-fluid.png" alt="Hydraulic Fluid" class="h-full w-auto object-contain transition-transform duration-500 group-hover:scale-110" />
        </div>
        <div class="bg-white p-6 rounded-b-xl shadow-lg">
          <h3 class="text-xl font-bold text-dark mb-2">Hydraulic Fluid</h3>
          <p class="text-gray-600 mb-4">High-performance hydraulic fluid for smooth operation and extended component life.</p>
          <div class="flex items-center justify-between">
            <span class="text-2xl font-bold text-dark">$29.99</span>
            <a href="/products/hydraulic-fluid" class="text-primary font-medium hover:underline flex items-center">
              Learn More
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- View All Button -->
    <div class="text-center mt-12">
      <a href="/products" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition-colors duration-300">
        View All Products
        <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<!-- GSAP Animations -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof gsap !== 'undefined') {
      // Animate product cards on scroll
      gsap.utils.toArray('.product-card').forEach((card, i) => {
        gsap.from(card, {
          scrollTrigger: {
            trigger: card,
            start: 'top 80%',
            toggleActions: 'play none none none'
          },
          y: 50,
          opacity: 0,
          duration: 0.8,
          delay: i * 0.1,
          ease: 'power2.out'
        });
      });
      
      // Parallax effect for product images
      gsap.utils.toArray('.product-image').forEach(image => {
        gsap.to(image, {
          y: -20,
          scrollTrigger: {
            trigger: image,
            start: 'top bottom',
            end: 'bottom top',
            scrub: 1
          }
        });
      });
    }
  });
</script>

<style>
  .product-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #FF3B00 0%, #FF6B00 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  
  .product-card:hover::before {
    transform: scaleX(1);
  }
  
  /* Responsive adjustments */
  @media (max-width: 767px) {
    .product-card {
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>
