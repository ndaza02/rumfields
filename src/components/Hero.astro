---
// Hero section with animated elements and call-to-action
---

<section class="relative h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-dark to-gray-900 text-white pt-20">
  <!-- Background Elements -->
  <div class="absolute inset-0 z-0 opacity-20">
    <div class="absolute inset-0 bg-[url('/images/oil-texture.png')] bg-cover bg-center mix-blend-overlay"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-dark/80"></div>
  </div>
  
  <!-- Content -->
  <div class="container mx-auto px-6 relative z-10 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Badge -->
      <div class="inline-block bg-primary/20 backdrop-blur-sm text-primary text-sm font-semibold px-4 py-1.5 rounded-full mb-6 animate-fade-in">
        Premium Quality Since 1995
      </div>
      
      <!-- Main Heading -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
        <span class="block">Advanced Lubrication</span>
        <span class="text-primary">For Peak Performance</span>
      </h1>
      
      <!-- Subheading -->
      <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-2xl mx-auto">
        Engineered to deliver superior protection and efficiency for your vehicle's most critical components.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/products" class="btn-primary text-lg px-8 py-4 font-semibold hover:bg-opacity-90 transition-all duration-300 transform hover:-translate-y-1">
          Explore Products
        </a>
        <a href="/contact" class="btn-outline text-lg px-8 py-4 font-semibold border-2 border-white/20 hover:border-primary hover:text-primary transition-all duration-300 transform hover:-translate-y-1">
          Contact Sales
        </a>
      </div>
      
      <!-- Trust Badges -->
      <div class="mt-16 flex flex-wrap justify-center items-center gap-8 opacity-80">
        <div class="flex items-center space-x-2">
          <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>ISO 9001 Certified</span>
        </div>
        <div class="w-px h-6 bg-white/20"></div>
        <div class="flex items-center space-x-2">
          <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>5-Year Warranty</span>
        </div>
        <div class="w-px h-6 bg-white/20"></div>
        <div class="flex items-center space-x-2">
          <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>Free Shipping</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#products" class="text-white hover:text-primary transition-colors">
      <span class="sr-only">Scroll down</span>
      <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<!-- GSAP Animations -->
<script>
  // Wait for GSAP to be loaded
  document.addEventListener('DOMContentLoaded', () => {
    // Check if GSAP is loaded
    if (typeof gsap !== 'undefined') {
      // Register ScrollTrigger plugin
      gsap.registerPlugin(ScrollTrigger);
      
      // Hero text animation
      const heroTl = gsap.timeline({ defaults: { ease: 'power3.out' } });
      
      // Stagger animations for better visual effect
      heroTl
        .from('.animate-fade-in', {
          y: 30,
          opacity: 0,
          duration: 0.8,
          stagger: 0.2,
          ease: 'back.out(1.7)'
        })
        .from('h1 span', {
          y: 50,
          opacity: 0,
          duration: 1,
          stagger: 0.1,
          ease: 'power3.out'
        }, '-=0.5')
        .from('p', {
          y: 20,
          opacity: 0,
          duration: 0.8
        }, '-=0.5')
        .from('.btn-primary, .btn-outline', {
          y: 20,
          opacity: 0,
          duration: 0.6,
          stagger: 0.1,
          ease: 'back.out(1.7)'
        }, '-=0.3');
      
      // Parallax effect for background
      gsap.to('.hero-bg', {
        y: '10%',
        scrollTrigger: {
          trigger: 'section',
          start: 'top bottom',
          end: 'bottom top',
          scrub: true
        }
      });
    }
  });
</script>

<style>
  /* Base styles */
  .btn-primary {
    @apply bg-primary text-white rounded-md font-medium transition-all duration-300;
  }
  
  .btn-outline {
    @apply bg-transparent text-white border-2 border-white/20 rounded-md font-medium transition-all duration-300;
  }
  
  /* Animation keyframes */
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    @apply bg-dark;
  }
  
  ::-webkit-scrollbar-thumb {
    @apply bg-primary rounded-full;
  }
  
  /* Custom selection */
  ::selection {
    @apply bg-primary/30 text-white;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    h1 {
      @apply text-4xl;
    }
    
    .btn-primary, .btn-outline {
      @apply w-full justify-center;
    }
  }
</style>
